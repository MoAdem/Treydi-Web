{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Vos Items
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/vendor/fonts/boxicons.css') }}"/>

	<link rel="stylesheet" href="{{ asset('assets/vendor/css/rtl/theme-default-dark.css') }}" class="template-customizer-theme-css"/>

{% endblock %}
{% block body %}

	<!-- scroll-top -->
	<button class="scroll__top scroll-to-target" data-target="html">
		<i class="flaticon-right-arrow"></i>
	</button>
	<!-- scroll-top-end-->

	<!-- header-area -->
	{{ include('front_components/_header-menu-front.html.twig') }}
	<!-- header-area-end -->


	<main
		class="main--area">

		<!-- breadcrumb-area -->
		<section class="breadcrumb-area breadcrumb__hide-img" data-background="assets/img/bg/breadcrumb_bg02.jpg">
			<div class="container">
				<div class="breadcrumb__wrapper">
					<div class="row">
						<div class="col-12">
							<div class="breadcrumb__content">
								<h2 class="title">Liste de vos Items</h2>
								<nav aria-label="breadcrumb">
									<ol class="breadcrumb">
										<br>
										<li class="breadcrumb-item active" aria-current="page">Vos Items</li>
											<li class="breadcrumb-item">
												<a href="{{ url('app_itemListall_f' ) }}">Tous Items</a>
										</li>
											

									</ol>
								</nav>
								<br>
								<img src="https://codeopinion.com/wp-content/uploads/2016/08/objects-icon.png" width="350">
								<nav aria-label="breadcrumb">
									<ol class="breadcrumb"></ol>
								</nav>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- breadcrumb-area-end -->

		<!-- shop-area -->
		<section class="shop-area">
			<div class="container">
				<div class="row justify-content-center row-cols-xl-1 row-cols-lg-1 row-cols-md-1 row-cols-sm-1 row-cols-1">
					<div class="col"></div>
				</div>
				<br>
				<div class="row justify-content-center row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1">

					<div class="col">
						<div class="shop__item">
							<div class="shop__item-thumb">
							<a href="{{ url('app_itemAdd_f') }}"><img style="   -webkit-filter: invert(1);
   filter: invert(1);" src="https://cdn.iconscout.com/icon/free/png-256/add-box-1780606-1513761.png" alt="img"></a>

							</div>

							<div class="shop__item-content">
								<div class="shop__item-content-top">

									<h4 class="title">
										<br>
										<form action={{ url('app_itemAdd_f') }}>
											<input class="btn btn-dark" type="submit" value="   Ajouter Item   "/>
										</form>
									</h4>

								</div>


							</div>

						</div>
					</div>


					{% for i in list %}

						<div class="col">
							<div class="shop__item">
								<div class="shop__item-thumb">
									<a href="{{ url('app_itemDetail_f',{'id':i.getId()} ) }}"><img src="{{ i.getImageurl() }}" alt="img" width=></a>

								</div>

								<div class="shop__item-content">
									<div class="shop__item-content-top">
										<h4 class="title">
											<a href="shop-details.html">{{ i.getLibelle() }}</a>
										</h4>

									</div>

									<div class="shop__item-cat">
										<a href="shop.html">{{ i.getIdCategorie().getNomCategorie() }}

										</a>


										<a href={{ url('app_itemLike_f',{'id':i.getId()} ) }}>üëç
											{{ i.getLikes()}}

										</a>

										<a href={{ url('app_itemDislike_f',{'id':i.getId()} ) }}>üëé
											{{ i.getDislikes()}}


										</a>
									</div>
									<div class="dropdown">
									<span class="badge bg-label-primary me-1">{{ i.getType() }}</span>
									<span class="badge bg-label-primary me-1">{{ i.getEtat() }}</span>
												
										<span class="badge bg-label-primary me-1 dropdown-toggle " data-bs-toggle="dropdown">
											Details
										</span>
										<div class="dropdown-menu">
											<div class="container">
												{{ i.getDescription() }}
											</div>
										</div>
									</div>


									<div class="dropdown">
										<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
											&nbsp; Actions
										</button>
										<div class="dropdown-menu">
								
											<a class="dropdown-item" href={{ url('app_itemModify_f',{'id':i.getId()} ) }}>
												<i class="bx bx-edit-alt me-1"></i>
												Modifier</a>
											<a class="dropdown-item" href={{ url('app_itemRemove_f',{'id':i.getId()} ) }}>
												<i class="bx bx-trash me-1"></i>
												Supprimer</a>
										</div>
										üëÅÔ∏è‚Äçüó®Ô∏è {{ i.getViews() }}
									</div>

								</div>

							</div>
						</div>

					{% endfor %}


				</div>
			</div>
		</section>


		<!-- shop-area-end -->

	</main>
	<!-- main-area-end -->
	<!-- footer-start -->
	{{ include('front_components/_footer-front.html.twig') }}
	<!-- footer-start-end -->
	<!-- JS here -->

	<!-- üíÅ Include both scripts below to support all browsers! -->

	<!-- Loads <model-viewer> for modern browsers: -->
	<script type="module"
			src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js">
	</script>

	<!-- Loads <model-viewer> for old browsers like IE11: -->
	<script nomodule
			src="https://unpkg.com/@google/model-viewer/dist/model-viewer-legacy.js">
	</script>

	<script src="{{ asset('assets/js/vendor/jquery-3.6.0.min.js')  }}"></script>
	<script src="{{ asset('assets/js/plugins.js') }}"></script>
	<script src="{{ asset('assets/js/ajax-form.js') }}"></script>
	<script src="{{ asset('assets/js/main.js') }}"></script>

	{% endblock %}
