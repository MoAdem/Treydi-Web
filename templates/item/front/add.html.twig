	<link rel="stylesheet" href="{{ asset('assets/vendor/css/rtl/theme-default-dark.css') }}" class="template-customizer-theme-css"/>

{% endblock %}
{% block body %}

	<!-- scroll-top -->
	<button class="scroll__top scroll-to-target" data-target="html">
		<i class="flaticon-right-arrow"></i>
	</button>
	<!-- scroll-top-end-->

	<!-- header-area -->
{{ include('front_components/_header-menu-front.html.twig') }}
	<!-- header-area-end -->
	<main
		class="main--area">

		<!-- breadcrumb-area -->
		<section class="breadcrumb-area breadcrumb__hide-img" data-background="assets/img/bg/breadcrumb_bg02.jpg">
			<div class="container">
				<div class="breadcrumb__wrapper">
					<div class="row">
						<div class="col-12">
							<div class="breadcrumb__content">
								<h2 class="title">Ajouter Item</h2>
								 <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="index.html">Item</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Ajouter un item √† votre inventaire</li>
                                    </ol>
                                </nav>
								<br>
								<img src="https://www.freeiconspng.com/uploads/add-item-icon-blue-0.png	" width="350">
								<nav aria-label="breadcrumb">
									<ol class="breadcrumb"></ol>
								</nav>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- breadcrumb-area-end -->

		<!-- shop-area -->
		<section class="shop-area">
					<div class="container">
							<h5 class="card-header">Ajouter Item</h5>


							{{ form_start(formA, {'attr': {'novalidate': 'novalidate'}}) }}

							<div class="card-body">
					
									<div class="row mb-3">
										<label class="col-sm-2 col-form-label" for="basic-default-name">Libelle</label>
										<div class="col-sm-10">

											{{ form_widget(formA.libelle,{'attr':{'class':'form-control', 'placeholder': 'Ins√©rer le libell√© de l item. (Max 30c)'}})}}
											{{ form_errors(formA.libelle)}}
                                            
										</div>
									</div>
									<div class="row mb-3">
										<label class="col-sm-2 col-form-label" for="basic-default-company">Categorie</label>
										<div class="col-sm-10">
											{{ form_widget(formA.id_categorie,{'attr':{'class':'form-control'}})}}
											{{ form_errors(formA.id_categorie)}}
										</div>
									</div>
									<div class="row mb-3">
										<label class="col-sm-2 col-form-label" for="basic-default-message">Description</label>
										<div class="col-sm-10">

											{{ form_widget(formA.description,{'attr':{'class':'form-control', 'placeholder': 'R√©diger une description d√©taill√©e. (Max 255c)'}})}}
											{{ form_errors(formA.description)}}
										</div>
									</div>
									<div class="row mb-3">
										<label class="col-sm-2 col-form-label" for="basic-default-message">Type</label>
										<div class="col-sm-10">

											{{ form_widget(formA.type,{'attr':{'class':'form-control'}})}}
											{{ form_errors(formA.type)}}
										</div>
									</div>
									<div class="row mb-3">
										<label class="col-sm-2 col-form-label" for="basic-default-message">Etat</label>
										<div class="col-sm-10">

											{{ form_widget(formA.etat,{'attr':{'class':'form-control'}})}}
											{{ form_errors(formA.etat)}}
										</div>
									</div>
                                    		<div class="row mb-3">
										<label class="col-sm-2 col-form-label" for="basic-default-message">Image</label>
										<div class="col-sm-10">
							{{ form_widget(formA.imageurl,{'attr':{'class':'form-control'}})}}
							{{ form_errors(formA.imageurl)}}
										</div>
									</div>
									<div class="row justify-content-end">
										<div class="col-sm-10">
																		{{ form_widget(formA.add,{'attr':{'class':'btn btn-dark'}})}}
							
										</div>
									</div>
							
							</div>
							
				{{ form_widget(formA.modify, {'attr': {'hidden': true}}) }}



							{{ form_end(formA) }}

						</div>
</section>

		<!-- shop-area-end -->

	</main>
	<!-- main-area-end -->

	<!-- main-area-end -->
	<!-- footer-start -->
	{{ include('front_components/_footer-front.html.twig') }}
	<!-- footer-start-end -->
