{% block body %}

    <!-- Google Tag Manager (noscript) (Default ThemeSelection: GTM-5DDHKGP, PixInvent: GTM-5J3LMKC) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5DDHKGP" height="0" width="0" style="display: none; visibility: hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar  ">
        <div class="layout-container">
            <!-- Menu -->
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                {{ include('Dashboard_components/_menuDashboard.html.twig') }}
            </aside>

            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">

                <!-- Navbar -->
                {{ include('Dashboard_components/_navbarDashboard.html.twig') }}
                <!-- / Navbar -->

                <!-- Content wrapper -->
                <div class="container-xxl flex-grow-1 container-p-y">
                <div class="content-wrapper">
                    <!-- Content -->
               <<hr class="my-5">
                    {{ form_start(form) }}
                    <div class="form-row align-items-center">
                        <div class="col">
                            {{ form_row(form.titreCoupon) }}
                        </div>
                    <div class="col">
                       {{ form_row(form.descriptionCoupon) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.dateExpiration) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.archived) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.idCategorie) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.etat_coupon) }}
                    </div>
                    <div class="col">
                        <div class="form-group">
                        <button type="submit" class="btn btn-primary">Search for a coupon :"</button> </div>
                    </div>
                    {{ form_end(form) }}
                    </div>
                        <div> <br> </div>

                    <div class="card">
                        <h5 class="card-header">Liste des coupons</h5>
                        <style> .card-header {

                                color:  deeppink;


                            }</style>
                        <div class="table-responsive text-nowrap">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>ID du Coupon</th>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Etat</th>
                                    <th>Date Expiration</th>
                                    <th>Archivé</th>
                                    <th>Code</th>
                                </tr>
                                </thead>
                                {% for coupon in coupons %}
                                <tbody class="table-border-bottom-0">
                                <tr>
                                    <td><strong> {{ coupon.id }}</strong></td>
                                    <td>{{ coupon.titreCoupon }}</td>
                                    <td><span>{{ coupon.descriptionCoupon }}</span></td>
                                    <td>{{ coupon.etatCoupon }}</span></td>
                                    <td>{{ coupon.dateExpiration ? coupon.dateExpiration|date('Y-m-d') : '' }}</span></td>
                                    <td><span class="badge bg-label-info me-1">{{ coupon.archived ? 'Oui' : 'Non' }}</span></td>
                                    <td><span class="badge bg-label-primary me-1">{{ coupon.code }}</span></td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="#" onclick="confirmDelete('{{ path('app_coupon_delete', {'id': coupon.id}) }}')"><i class="bx bx-trash me-1"></i> Supprimer</a>
                                                <a class="dropdown-item" href="{{ path('app_coupon_edit', {'id': coupon.id}) }}"> ><i class="bx bx-edit-alt me-1"></i> Modifier</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

    <script>
        function confirmDelete(url) {
            // Add an alert before deleting
            var alertMessage = "Êtes-vous sûr de vouloir supprimer ce coupon ?";
            if (confirm(alertMessage)) {
                window.location.href = url;
            }
        }
    </script>

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="{{ asset('/assets/vendor/libs/jquery/jquery.js') }}"></script>

    <script src="{{ asset('/assets/vendor/libs/popper/popper.js') }}"></script>

    <script src="{{ asset('/assets/vendor/js/bootstrap.js') }}"></script>

