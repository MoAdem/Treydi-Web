    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar  ">
        <div class="layout-container">
            <!-- Menu -->
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                {{ include('Dashboard_components/_menuDashboard.html.twig') }}
            </aside>

            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">

                <!-- Navbar -->
                {{ include('Dashboard_components/_navbarDashboard.html.twig') }}
                <!-- / Navbar -->

                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <!--  <form class="card-body"> -->
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <h4>Modifier Utilisateur</h4>

                        <div class="col-md-6">
                            <label class="form-label" for="multicol-email">Email</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text" id="multicol-email2">@example.com</span>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control','id':'basic-default-fullname', 'placeholder': 'email'}}) }}
                                {{ form_errors(form.email)}}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-password-toggle">
                                <label class="form-label" for="multicol-password">Password</label>
                                <div class="input-group input-group-merge">
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control','id':'basic-default-fullname', 'placeholder': 'password'}}) }}
                                    {{ form_errors(form.password)}}
                                    <span class="input-group-text cursor-pointer" id="multicol-password2"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="multicol-first-name">Nom</label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control','id':'basic-default-fullname', 'placeholder': 'nom'}}) }}
                            {{ form_errors(form.nom)}}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="multicol-last-name">Prenom</label>
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control','id':'basic-default-fullname', 'placeholder': 'prenom'}}) }}
                            {{ form_errors(form.prenom)}}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="multicol-last-name">Adresse</label>
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control','id':'basic-default-fullname', 'placeholder': 'adresse'}}) }}
                            {{ form_errors(form.adresse)}}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="multicol-last-name">Date Naissance </label>
                            {{ form_widget(form.date_naissance, {'attr': {'class': 'form-control dob-picker', 'id': 'multicol-country', 'data-allow-clear': 'true'}}) }}
                            {{ form_errors(form.date_naissance) }}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="multicol-last-name">Score</label>
                            {{ form_widget(form.score, {'attr': {'class': 'form-control','id':'basic-default-fullname', 'placeholder': 'score'}}) }}
                            {{ form_errors(form.score)}}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="multicol-country">Roles</label>
                            {{ form_widget(form.roles, {'attr': {'class': 'select2 form-select', 'id': 'multicol-country', 'data-allow-clear': 'true'}}) }}
                            {{ form_errors(form.roles) }}
                        </div>
                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Register</button>
                            <button type="reset" class="btn btn-label-secondary">Cancel</button>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
                </div>
            </div>
    </div>
